<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation"
    app:startDestination="@id/workmatesFragment">

    <fragment
        android:id="@+id/workmatesFragment"
        android:name="com.emmanuel.go4lunch.ui.workmates.WorkmatesFragment"
        android:label="fragment_workmates"
        tools:layout="@layout/fragment_workmates">
        <action
            android:id="@+id/action_workmatesFragment_to_restaurantDetail"
            app:destination="@id/restaurantDetail" />
    </fragment>
    <fragment
        android:id="@+id/listViewFragment"
        android:name="com.emmanuel.go4lunch.ui.listview.ListViewFragment"
        android:label="fragment_list_view"
        tools:layout="@layout/fragment_list_view">
        <action
            android:id="@+id/action_listViewFragment_to_restaurantDetail"
            app:destination="@id/restaurantDetail" />
    </fragment>
    <fragment
        android:id="@+id/mapViewFragment"
        android:name="com.emmanuel.go4lunch.ui.mapview.MapViewFragment"
        android:label="fragment_map_view"
        tools:layout="@layout/fragment_map_view">
        <action
            android:id="@+id/action_mapViewFragment_to_restaurantDetail"
            app:destination="@id/restaurantDetail" />

    </fragment>
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.emmanuel.go4lunch.ui.settings.SettingsFragment"
        android:label="fragment_settings"
        tools:layout="@layout/fragment_settings" />
    <fragment
        android:id="@+id/restaurantDetail"
        android:name="com.emmanuel.go4lunch.ui.restaurantdetail.RestaurantDetailFragment"
        android:label="fragment_restaurant_detail"
        tools:layout="@layout/fragment_restaurant_detail">
        <argument
            android:name="RestaurantDetail"
            app:argType="com.emmanuel.go4lunch.data.api.model.NearByRestaurant" />
    </fragment>
</navigation>