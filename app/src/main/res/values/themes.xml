<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Go4lunch" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/primary_variant_color</item>
        <item name="colorOnPrimary">@color/text_white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>
    <!-- Authentication activity-->
    <style name="AuthenticationActivity" parent="Theme.Go4lunch">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>
    <!-- ToolBar -->
    <style name="ToolBarStyle" parent="Theme.AppCompat">
        <item name="android:background">@color/primary_color</item>
    </style>
    <!-- button detail restaurant-->
    <style name="buttonDetail" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:padding">@dimen/spacer_3</item>
        <item name="android:textColor">@color/light_color</item>
        <item name="android:textSize">@dimen/material_typography_body1</item>
    </style>
    <style name="RatingBar" parent="Base.Widget.AppCompat.RatingBar.Small">
        <item name="colorControlActivated">@color/quantum_yellow600</item>
    </style>
    <!-- Progress bar-->
    <style name="progressBar" >
        <item name="colorAccent">@color/primary_color</item>
    </style>
</resources>