<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Go4lunch" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/primary_variant_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/light_color</item>
        <item name="colorSecondaryVariant">@color/light_color</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="preferenceTheme">@style/AppPreferenceTheme</item>
        <item name="drawerArrowStyle">@style/DrawerIcon</item>
    </style>
    <!-- Authentication activity-->
    <style name="AuthenticationActivity" parent="Theme.Go4lunch">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>
    <!-- Drawer Icon -->
    <style name="DrawerIcon" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/gmm_white</item>
    </style>
    <!-- button detail restaurant-->
    <style name="buttonDetail" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:padding">@dimen/spacer_3</item>
        <item name="android:textColor">@color/light_color</item>
        <item name="android:textSize">@dimen/material_typography_body1</item>
    </style>
    <!-- Rating bar-->
    <style name="RatingBar" parent="Widget.AppCompat.RatingBar">
        <item name="android:progressDrawable">@drawable/rating_stars_layer</item>
        <item name="colorControlNormal">@color/quantum_yellow600</item>
        <item name="colorControlActivated">@color/fui_transparent</item>
    </style>
    <!-- Progress bar-->
    <style name="progressBar" >
        <item name="colorAccent">@color/primary_color</item>
    </style>
    <!-- Preference Theme -->
    <style name="AppPreferenceTheme" parent="@style/PreferenceThemeOverlay.v14.Material">
        <item name="android:textColor">@android:color/black</item>
    </style>
</resources>